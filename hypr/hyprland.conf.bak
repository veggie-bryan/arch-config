# ============================
#  MONITORS
# ============================
monitor=HDMI-A-2,2560x1440@144,0x0,1
monitor=HDMI-A-1,1920x1080@60,2560x-350,1,transform,1
monitor=,preferred,auto,auto

# ============================
#  ENVIRONMENT EDITS
# ============================
env = QT_QPA_PLATFORMTHEME,qt6ct
env = QT_STYLE_OVERRIDE,Kvantum
env = QT_QUICK_CONTROLS_STYLE,Kvantum

# ============================
#  INPUT
# ============================
input {
    sensitivity = -0.5
    accel_profile = flat
}

# ============================
#  PROGRAM SHORTCUTS
# ============================
$terminal = kitty
$launcher = rofi -show drun

# ============================
#  KEYBINDS
# ============================
bind = SUPER, RETURN, exec, $terminal
bind = SUPER, D, exec, $launcher
bind = SUPER, Q, killactive
bind = SUPER, E, exec, dolphin
bind = SUPER, V, togglefloating
bind = SUPER SHIFT, R, exec, pkill Hyprland

# ============================
#  WORKSPACES
# ============================
bind = SUPER, 1, workspace, 1
bind = SUPER, 2, workspace, 2
bind = SUPER, 3, workspace, 3
bind = SUPER, 4, workspace, 4

bind = SUPER SHIFT, 1, movetoworkspace, 1
bind = SUPER SHIFT, 2, movetoworkspace, 2
bind = SUPER SHIFT, 3, movetoworkspace, 3
bind = SUPER SHIFT, 4, movetoworkspace, 4

# ============================
#  SCREENSHOTS
# ============================
bind = SUPER, S, exec, grim -g "$(slurp)" - | swappy -f -

# ============================
#  AUDIO KEYS
# ============================
bind = ,XF86AudioRaiseVolume, exec, pactl set-sink-volume @DEFAULT_SINK@ +5%
bind = ,XF86AudioLowerVolume, exec, pactl set-sink-volume @DEFAULT_SINK@ -5%
bind = ,XF86AudioMute, exec, pactl set-sink-mute @DEFAULT_SINK@ toggle

# ============================
#  AUTOSTART
# ============================
exec-once = nm-applet
exec-once = udiskie
exec-once = waybar
exec-once = hyprpaper
exec-once = systemctl --user import-environment QT_STYLE_OVERRIDE QT_QPA_PLATFORMTHEME QT_AUTO_SCREEN_SCALE_FACTOR
exec-once = dbus-update-activation-environment --systemd DBUS_SESSION_BUS_ADDRESS DISPLAY XAUTHORITY WAYLAND_DISPLAY
